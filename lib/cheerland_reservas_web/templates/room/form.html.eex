<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :label %>
  <%= text_input f, :label %>
  <%= error_tag f, :label %>

  <%= label f, :beds %>
  <%= number_input f, :beds %>
  <%= error_tag f, :beds %>

  <%= label f, :women_only %>
  <%= checkbox f, :women_only %>
  <%= error_tag f, :women_only %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
