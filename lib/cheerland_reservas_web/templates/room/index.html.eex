<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Quarto</th>
      <th>Camas Dispon√≠veis</th>
      <th>Qtd Camas</th>
      <th>Tipo</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for room <- @rooms do %>
    <tr>
      <td><%= room.label %></td>
      <td><%= room.max_beds - length(room.users) %></td>
      <td><%= room.max_beds %></td>
      <td><%= if room.women_only, do: "Feminino", else: "Misto" %></td>

      <td>
        <%= if @current_user.room_id == room.id || is_nil(@current_user.room_id) do %>
          <%= link "Visualizar", to: Routes.room_path(@conn, :show, room) %>
        <%= end %>
        <%= link "Editar", to: Routes.room_path(@conn, :edit, room) %>
        <%= link "Deletar", to: Routes.room_path(@conn, :delete, room), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "Novo Quarto", to: Routes.room_path(@conn, :new) %></span>
